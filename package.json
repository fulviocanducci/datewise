{
  "name": "canducci-datewise",
  "version": "1.0.0",
  "description": "Date and time validation and manipulation routines.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:bundle": "rollup -c",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:bundle",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "keywords": [
    "date",
    "time",
    "datetime",
    "validation",
    "luxon",
    "typescript"
  ],
  "author": "FÃºlvio Cezar Canducci Dias",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "luxon": "^3.7.2"
  }
}
